# SmartAP Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=SmartAP
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# AI Provider Configuration
# Options: "github", "openai", "azure"
AI_PROVIDER=github

# GitHub Models (Free tier for development)
# Get your token at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_pat_here

# OpenAI (Alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
MODEL_ID=openai/gpt-4.1
MODEL_BASE_URL=https://models.github.ai/inference

# Extraction Settings
EXTRACTION_CONFIDENCE_THRESHOLD=0.85
MAX_FILE_SIZE_MB=50

# Foxit API Configuration (for OCR)
# Required for scanned document processing
# FOXIT_API_KEY=your_foxit_api_key_here
# FOXIT_API_ENDPOINT=https://api.foxit.com/ocr

# Storage Directories
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
