# Production Environment Variables
# Copy to .env in production and update with actual values

# Application
APP_NAME=SmartAP
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# API
API_HOST=0.0.0.0
API_PORT=8000

# Database (PostgreSQL for production)
DATABASE_URL=postgresql+asyncpg://smartap:CHANGE_ME@localhost:5432/smartap
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis Cache
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=7200

# AI Configuration
AI_PROVIDER=github
GITHUB_TOKEN=ghp_CHANGE_ME_YOUR_GITHUB_TOKEN
MODEL_ID=openai/gpt-4.1
MODEL_BASE_URL=https://models.github.ai/inference
EXTRACTION_CONFIDENCE_THRESHOLD=0.85

# Storage
UPLOAD_DIR=/app/uploads
PROCESSED_DIR=/app/processed
MAX_FILE_SIZE_MB=50

# Foxit OCR (optional)
FOXIT_API_KEY=
FOXIT_API_ENDPOINT=
