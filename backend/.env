# SmartAP Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=SmartAP
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# AI Provider Configuration
# Options: "github", "openai", "azure"
AI_PROVIDER=github

# GitHub Models (Free tier for development)
# Get your token at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_pat_here

# OpenAI (Alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
MODEL_ID=openai/gpt-4.1
MODEL_BASE_URL=https://models.github.ai/inference

# Extraction Settings
EXTRACTION_CONFIDENCE_THRESHOLD=0.85
MAX_FILE_SIZE_MB=50

# Foxit API Configuration (for OCR)
# Required for scanned document processing
# FOXIT_API_KEY=your_foxit_api_key_here
# FOXIT_API_ENDPOINT=https://api.foxit.com/ocr

# Foxit eSign Configuration (Phase 4.2)
# Get your credentials at: https://developers.foxit.com/esign
FOXIT_ESIGN_API_KEY=your_foxit_esign_api_key_here
FOXIT_ESIGN_API_SECRET=your_foxit_esign_api_secret_here
FOXIT_ESIGN_BASE_URL=https://api.foxitsign.com/v2.0
FOXIT_ESIGN_WEBHOOK_SECRET=your_webhook_secret_here
FOXIT_ESIGN_CALLBACK_URL=http://localhost:8000/api/v1/webhooks/esign

# eSign Approval Thresholds
ESIGN_THRESHOLD_MANAGER=5000.00
ESIGN_THRESHOLD_SENIOR=25000.00
ESIGN_THRESHOLD_CFO=100000.00

# Storage Directories
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
SIGNED_DIR=./signed
